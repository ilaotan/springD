<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springD.application.system.dao.OrgMapper">
	<resultMap id="roleResultMap" type="com.springD.application.system.entity.Role">
		<id property="id" column="id" />
		<result property="name" column="name"/>
		<result property="code" column="code"/>
		<result property="pid" column="pid"/>
		<result property="remark" column="remark"/>
		<result property="status" column="state"/>
	</resultMap>
	
	<!-- 插入org数据 -->
	<insert id="save" parameterType="com.springD.application.system.entity.Org" useGeneratedKeys="true" keyProperty="id">
  		INSERT INTO tbl_org(name,parent_id,parent_ids,type,status,remark,create_date,grade)VALUES
  					(#{name},#{parentId},#{parentIds},#{type},#{status},#{remark},#{createDate},#{grade});
 	</insert>
 	
 	<update id="update" parameterType="com.springD.application.system.entity.Org">
 		UPDATE tbl_org SET parent_id=#{parentId},parent_ids=#{parentIds},type=#{type},name=#{name},status=#{status},remark=#{remark},grade=#{grade} WHERE id=#{id}
 	</update>
 	<!-- 根据ID查找数据 -->
 	<select id="findById" resultType="com.springD.application.system.entity.Org" parameterType="java.lang.String">
		SELECT * FROM tbl_org WHERE id=#{id}
   	</select>
 	
 	<!-- 根据ID查找所有子级数据 -->
 	<select id="findByParentIdsLike" resultType="com.springD.application.system.entity.Org" parameterType="java.lang.String">
		SELECT * FROM tbl_org WHERE parent_ids LIKE CONCAT('%','${str}','%' )  
   	</select>
   	
   	<!-- 根据ID查找所有子级数据 -->
 	<select id="findAll" resultType="com.springD.application.system.entity.Org">
		SELECT * FROM tbl_org
   	</select>
   	
   	<!-- 根据id删除单条数据 -->
   	<delete id="del" parameterType="java.lang.String">
		DELETE FROM tbl_org WHERE id = #{id}
	</delete>
</mapper>